<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.ActivityMain">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/top"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="normal|bold"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/content"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="normal" />

        <EditText
            android:id="@+id/editPetName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Name of pet"
            android:inputType="text"
            android:text="" />

        <EditText
            android:id="@+id/editPetAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Age of pet"
            android:inputType="text"
            android:text="" />

        <Button
            android:id="@+id/buttonPetAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add pet" />

        <Button
            android:id="@+id/buttonPetDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete pet" />

        <ListView
            android:id="@+id/PetsList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:choiceMode="singleChoice"
            android:listSelector="#00FF00" />
    </LinearLayout>

</FrameLayout>
